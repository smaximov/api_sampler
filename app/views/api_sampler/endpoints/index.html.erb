<table class="ui green unstackable sortable striped celled table">
  <thead>
    <tr>
      <th class="two wide right aligned">
        <%= sortable_column(t('.http_verb'), :request_method) %>
      </th>
      <th class="center aligned">
        <%= sortable_column(t('.endpoint'), :path) %>
      </th>
      <th class="two wide">
        <%= sortable_column(t('.samples_count'), :samples_count) %>
      </th>
    </tr>
  </thead>
  <tbody>
    <% @endpoints.each do |endpoint| %>
      <tr>
        <td class="right aligned"><%= endpoint.request_method %></td>
        <td class="center aligned">
          <%= link_to endpoint.path, api_sampler.endpoint_samples_path(endpoint) %>
        </td>
        <td><%= endpoint.samples_count %></td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <th colspan="3">
      <%= paginate @endpoints, views_prefix: 'api_sampler' %>
    </th>
  </tfoot>
</table>
